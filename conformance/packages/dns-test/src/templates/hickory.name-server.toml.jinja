user = "nobody"
group = "nogroup"

[[zones]]
zone = "{{ fqdn }}"
zone_type = "Primary"
enable_dnssec = {{ use_dnssec }}
nx_proof_kind = { nsec3 = { iterations = 1 } }
[zones.stores]
type = "file"
zone_file_path = "/etc/zones/main.zone"

[[zones.keys]]
{% if use_pkcs8 %}
key_path = "/etc/zones/zsk.pk8"
{% else %}
key_path = "/etc/zones/zsk.key"
{% endif %}
algorithm = "RSASHA256"
is_zone_signing_key = true

{% for zone in additional_zones -%}
[[zones]]
zone = "{{ zone }}"
zone_type = "Primary"
[zones.stores]
type = "file"
zone_file_path = "/etc/zones/{{ zone }}zone"
{% endfor -%}
